separator_block_width=1

[keyboard]
command=~/bin/kblayout get
interval=-1
signal=12

[brightness]
command=~/bin/brightness
interval=60
signal=11
align=right

[redshift]
command=~/bin/redshift_switch
interval=once
signal=14

[volume-pulseaudio]
command=~/bin/volume-pulseaudio
interval=10
signal=10
LONG_FORMAT="  VOL${VOL}%  "
SHORT_FORMAT="${VOL}%"
DEFAULT_COLOR="#888888"
MUTED_COLOR="#ff3333"
USE_ALSA_NAME=1

[cpu]
command=~/bin/cpu
interval=1
align=left

[memory]
command=~/bin/memory
interval=1
align=left

[battery]
command=~/bin/battery
interval=5
align=center

[clock]
command=~/bin/clock
interval=1
align=left
separator=false

